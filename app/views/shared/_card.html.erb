 <% @flats.each do |flat| %>
  <a href=<%= flat_path(flat) %> class='link'>
  <div class="card">
      <%= cl_image_tag flat.photos.first.key, crop: :fill, class:'card-img'%>
      <div class="card-content">
        <%= flat.name %>
        <%= flat.address %>
        <%= flat.price %>
      </div>
  </div>
  </a>
<% end %>
